<UserControl
    x:Class="QBDrumMap.Views.Controls.ButtonArticulation"
    x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding LabelText, ElementName=root}" VerticalAlignment="Center"/>
        <Button Grid.Column="1"
                ToolTip="Search"
                Background="Transparent" BorderThickness="0" Focusable="False"
                Command="{Binding ButtonCommand, ElementName=root}"
                CommandParameter="{Binding CommandParameter, ElementName=root}">
            <TextBlock FontFamily="Segoe MDL2 Assets"
                       Text="&#xE71E;"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button>
        <Button Grid.Column="2"
                ToolTip="Clear"
                Background="Transparent" BorderThickness="0" Focusable="False"
                Command="{Binding ClearCommand, ElementName=root}"
                CommandParameter="{Binding CommandParameter, ElementName=root}">
            <TextBlock FontFamily="Segoe MDL2 Assets"
                       Text="&#xE711;"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
